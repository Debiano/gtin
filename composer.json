{
    "name": "heyhoo/gtin",
    "type": "library",
    "description": "GTIN Validation",
    "homepage": "https://github.com/heyhoo/gtin",
    "keywords": [
        "laravel",
        "ean",
        "gtin",
        "gs1",
        "validation",
        "validator"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mark van den Broek",
            "email": "mark@heyhoo.nl"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/support": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Heyhoo\\Gtin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heyhoo\\Gtin\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --ignore=vendor src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --ignore=vendor src tests"
    },
    "config": {
        "sort-packages": true
    }
}
