{
    "name": "mvdnbrk/gtin",
    "type": "library",
    "description": "GTIN / EAN / UPC Validation for Laravel",
    "homepage": "https://github.com/mvdnbrk/gtin",
    "keywords": [
        "laravel",
        "validation",
        "validator",
        "ean",
        "upc",
        "gtin",
        "gs1"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mark van den Broek",
            "email": "mvdnbrk@gmail.com"
        }
    ],
    "require": {
        "php": "~7.1",
        "illuminate/support": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit" : "~6.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Mvdnbrk\\Gtin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mvdnbrk\\Gtin\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --ignore=vendor src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --ignore=vendor src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mvdnbrk\\Gtin\\ValidationServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
